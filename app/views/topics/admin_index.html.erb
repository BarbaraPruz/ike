<h1>Admin Topics</h1>
<% if flash[:alert] %>
    <div class="notice"><%= flash[:alert] %></div>
<% end %>
<ul>
<% @topics.each do |topic| %>
    <li>
        <%= topic.name %>
        <%= button_to "Delete", { :controller => 'topics',  :action=>"destroy", 
        :id => topic.id} , :method => :delete %>
    </li>
<% end %>
