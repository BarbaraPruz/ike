<h1>Edit Topic</h1>
<%= form_for @topic  do |f| %>
    <% if @topic.errors.any? %>
        <%= show_error_messages(@topic) %>
    <% end %>
    
    <div class="form-group <%= 'has-error' if @topic.errors.has_key?(:name) %>">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <%= f.submit "Update" %>
<% end %>