<h1>Articles by Topic</h1>
<ul>
<% @topics.each do |topic| %>
    <li><%= topic.name %></li>
    <ul>
        <% topic.articles.each do |article| %>
            <li><%= link_to article.title, topic_article_path(topic,article) %></li> 
            <% if is_admin? %>
                <%= button_to "Delete", { :controller => 'articles',  :action=>"destroy", 
                :id => article.id, :topic_id => topic.id} , :method => :delete %>
            <% end %>           
        <% end %>
    </ul>
<% end %>
                                              