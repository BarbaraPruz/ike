<div class="row">
    <div class="col-sm-8">
        <h1>Articles</h1>
    </div>
    <div class="col-sm-4">
        <%= form_tag articles_path, method: "get" do %> 
            <%= sort_select_tag(@sort_field) %>
            <%= submit_tag "Sort" %>
        <% end %>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Topic</th>
            <th scope="col">Title</th>
            <th scope="col">Likes</th>
            <th scope="col">Last Update</th>
        </tr>
    </thead>
    <tbody>
    <% @articles.each do | article | %>
        <tr>
            <th scope="row"><%= article.topic.name %></th>
            <td><%= link_to article.title, article_path(article) %></td>
            <td><%= article.likes.count %></td>
            <td><%= format_time(article.updated_at) %></td>
        </tr>
    <% end %>
  </tbody>
</table>