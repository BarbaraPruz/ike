<div class="row">
    <div class="col-sm-8">
        <h1>Articles</h1>
    </div>
    <div class="col-sm-4">
        <%= form_tag articles_path, method: "get" do %> 
            <%= select_tag "sort", 
                options_for_select(@sort.collect{ |u| [u[:display], u[:value]] },
                @sort_field) %>  
            <%= submit_tag "Sort" %>
        <% end %>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Topic</th>
            <th scope="col">Title</th>
            <th scope="col">Likes</th>
            <th scope="col">Last Update</th>
        </tr>
    </thead>
    <tbody>
    <% @articles.each do | article | %>
        <tr>
            <th scope="row"><%= article.topic.name %></th>
            <td><%= link_to article.title, topic_article_path(article.topic_id,article) %></td>
            <td><%= article.helpful_count %></td>
            <td><%= format_time(article.updated_at) %></td>
        </tr>
    <% end %>
  </tbody>
</table>