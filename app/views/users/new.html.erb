<h1 class="text-center">Sign Up</h1>
<div class="form-area">
    <%= form_for @user do |f|%>
        <% if @user.errors.any? %>
            <div id="error_explanation">
            <h2>oops, there seem to be some problems:</h2>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="form-group <%= 'has-error' if @user.errors.has_key?(:name) %>">
                <div class="col-sm-3"><%= f.label :name %></div>
                <div class="col-sm-9"><%= f.text_field :name %></div>
            </div>
        </div>

        <div class="row">
            <div class="form-group <%= 'has-error' if @user.errors.has_key?(:email) %>">
                <div class="col-sm-3"><%= f.label :email %></div>
                <div class="col-sm-9"><%= f.email_field :email %></div>
            </div>
        </div>

        <div class="row">
            <div class="form-group <%= 'has-error' if @user.errors.has_key?(:password) %>">
                <div class="col-sm-3"><%= f.label :password %></div>
                <div class="col-sm-9"><%= f.password_field :password %></div>
            </div>
        </div>

        <div class="row">
            <div class="form-group <%= 'has-error' if @user.errors.has_key?(:password_confirmation) %>">
                <div class="col-sm-3"><%= f.label :password_confirmation %></div>
                <div class="col-sm-9"><%= f.password_field :password_confirmation %></div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <%= f.submit 'Sign Up', :class => "btn btn-primary btn-block" %>
            </div>
        </div>
    <% end %>
</div>