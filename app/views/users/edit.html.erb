<h1 class="text-center">Edit User</h1>
<div class="form-area outlined-section">
    <%= form_for @user  do |f| %>
        <% if @user.errors.any? %>
            <%= show_error_messages(@user) %>
        <% end %>

        <div class="row">
            <div class="form-group <%= 'has-error' if @user.errors.has_key?(:name) %>">
                <div class="col-sm-3"><%= f.label :name %></div>
                <div class="col-sm-9"><%= f.text_field :name %></div>
            </div>
        </div>        

        <div class="row">
            <div class="form-group <%= 'has-error' if @user.errors.has_key?(:email) %>">
                <div class="col-sm-3"><%= f.label :email %></div>
                <div class="col-sm-9"><%= f.email_field :email %></div>
            </div>
        </div>

        <div class="row">
            <% if admin? %>
                <div class="form-group">
                    <div class="col-sm-3"><%= f.label :admin %></div>
                    <div class="col-sm-9"><%= f.check_box :admin %></div>
                </div>
            <% end %>
        </div>

        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <%= f.submit 'Update', :class => "btn btn-primary btn-block" %>
            </div>
        </div>
    <% end %>
</div>