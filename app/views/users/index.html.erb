<h1>Users</h1>
<div class="indent">
    <ul class="list-unstyled" >
    <% @users.each do |user| %>
        <li>
            <%= user.name %> - <%= user.email %>
            <%= link_to "Edit", { :controller => 'users',  :action=>"edit", 
            :id => user.id}, :class => "btn btn-outline-info fas fa-edit" %>
            <%= link_to "Delete", { :controller => 'users',  :action=>"destroy", 
            :id => user.id} , :method => :delete, :class => "btn btn-outline-warning fas fa-trash-alt" %>
        </li>
    <% end %>
    </ul>
</div>

